# Timezone (adjust to your timezone)
TZ=Africa/Johannesburg

# User and group IDs for Docker containers
PUID=1000
PGID=1000

# Application data directories (replace with actual paths on your system)
APPDATA=/path/to/appdata
DOWNLOADS_PATH=/path/to/downloads
MEDIA_PATH=/path/to/media
USERS_PATH=/path/to/users

# Emby and web UI ports
EMBY_PORT=8096
WEBUI_PORT=8080
TORRENTING_PORT=6881
HTTP_PORT=80
HTTPS_PORT=443

# Cloudflare Tunnel Token for Cloudflared container
TUNNEL_TOKEN=your_tunnel_token_here

# Watchtower Notifiarr API key for notifications
WATCHTOWER_NOTIFIARR_KEY=your_notifiarr_api_key

# Domain and subdomains for SWAG (Secure Web Application Gateway)
URL=your_domain_here
SUBDOMAINS=adguard,emby,kavita,prowlarr,qbittorrent,radarr,sonarr,flaresolverr
VALIDATION=dns
DNSPLUGIN=cloudflare
